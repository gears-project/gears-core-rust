use xfstruct::{XFlowValue};

pub expression -> XFlowValue
  = boolean_expression
  / arithmetic_expression
  / atom

/// Arithmetic

pub arithmetic_expression -> XFlowValue
  = e:equation { XFlowValue::Integer(e) }

equation -> i64
  = mul
  / div
  / add
  / sub

add -> i64
  = i:int _ "+" _ j:int { i + j }

sub -> i64
  = i:int _ "-" _ j:int { i - j }

mul -> i64
  = i:int _ "*" _ j:int { i * j }

div -> i64
  = i:int _ "/" _ j:int { i / j }

// Boolean

pub boolean_expression -> XFlowValue
  = e:boolean_test { XFlowValue::Boolean(e) }

boolean_test -> bool
  = equals
  / not_equals
  / greater_than
  / less_than
  / greater_or_equal
  / less_or_equal
  / and
  / or
  / not
  / xor

equals -> bool
  = l:int _ "==" _ r:int { l == r }
  / l:boolean _ "==" _ r:boolean { l == r }

not_equals -> bool
  = l:int _ "!=" _ r:int { l != r }
  / l:boolean _ "!=" _ r:boolean { l != r }

greater_than -> bool
  = l:int _ ">" _ r:int { l > r }

less_than -> bool
  = l:int _ "<" _ r:int { l < r }

greater_or_equal -> bool
  = l:int _ ">=" _ r:int { l >= r }

less_or_equal -> bool
  = l:int _ "<=" _ r:int { l <= r }

and -> bool
  = l:boolean _ "&&" _ r:boolean { l && r }

or -> bool
  = l:boolean _ "||" _ r:boolean { l || r }

xor -> bool
  = l:boolean _ "^" _ r:boolean { l && r }

not -> bool
  = "!" l:boolean { !l }

// Primitives

atom -> XFlowValue
 = i:int { XFlowValue::Integer(i) }
 / b:boolean { XFlowValue::Boolean(b) }

boolean -> bool
 = b:"true" { true }
 / b:"false" { false }

int -> i64
  = n:$([0-9]+) { n.parse().unwrap() }

space -> ()
  = " "
  / "\n"
  / "\r"

_ = space*

